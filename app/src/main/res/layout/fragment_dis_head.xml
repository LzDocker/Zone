<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcoker.zone.home.fragment.StartFragment"

    >

    <!-- TODO: Update blank fragment layout -->


    <cn.kevin.banner.BannerViewPager
        android:id="@+id/bvp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layerType="software"
        app:around_visible="false"
        app:point_gravity="bottom_center" />


    <HorizontalScrollView
        android:id="@+id/srcoll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/bvp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#FFA500"
                android:gravity="center"
                android:text="8月热文"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="#FFB90F"
                android:gravity="center"
                android:text="生活碎文"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="#EE9572"
                android:gravity="center"
                android:text="签约作者"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="#EE6A50"
                android:gravity="center"
                android:text="碎碎念"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="#EE1289"
                android:gravity="center"
                android:text="Zone 精品"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="#EE5C42"
                android:gravity="center"
                android:text="Zone 招聘"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="#CD5B45"
                android:gravity="center"
                android:text="哇咔咔"
                android:textColor="#fff"
                android:textSize="16sp" />

        </LinearLayout>

    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/srcoll"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="热门专题"
            android:textColor="@color/colorPrimary"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:padding="3dp"
                android:text="漫画手绘"
                android:textColor="#FFA500"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:padding="3dp"
                android:text="上班这点事"
                android:textColor="#FFA500"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:padding="3dp"
                android:text="技术论坛"
                android:textColor="#FFA500"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:padding="3dp"
                android:text="黄牛的春天"
                android:textColor="#FFA500"
                android:textSize="12sp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="18dp"
            android:text="热门文章"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


</RelativeLayout>
